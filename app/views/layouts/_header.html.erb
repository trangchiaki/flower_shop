                data: {toggle: "dropdown"}, role: "button",
                aria: {haspopup: "true", expanded: "false"} do %>
                  <%= t(".account") %><b class="caret"></b>
              <% end %>
              <ul class="dropdown-menu">
                <li><%= link_to t(".account"), "#" %></li>
                <li><%= link_to t(".setting"), "#" %></li>
                <li role="separator" class="divider"></li>
